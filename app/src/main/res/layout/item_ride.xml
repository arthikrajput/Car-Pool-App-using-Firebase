<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/sourceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/destinationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/departureTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure Time"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/costTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/seatsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seats Available"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/offerorNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/offerorEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/offerorMobileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile: "
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <Button
        android:id="@+id/requestRideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Ride"
        android:background="@color/colorAccent"
    android:textColor="#FFFFFF"
    android:layout_marginTop="16dp"
    android:padding="12dp"/>
</LinearLayout>
